func CallAPI(url string) {
	fmt.Printf("Bắt đầu gọi API: %s tại %s\n", url, time.Now().Format("15:04:05"))

	resp, err := http.Get(url)
	if err != nil {
		fmt.Println("Lỗi khi gọi API:", err)
		return
	}
	defer resp.Body.Close()

	fmt.Printf("Gọi API thành công. Status Code: %d\n", resp.StatusCode)
}



